# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/slls_legal_clinic

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=24h

# Email Configuration (for password reset and notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=SLLS Legal Clinic <noreply@sllslegalclinic.org>

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Case Configuration
CASE_RESPONSE_DEADLINE_HOURS=48
MAX_CASES_PER_SOLICITOR=15

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.jpg,.png
UPLOAD_PATH=./uploads